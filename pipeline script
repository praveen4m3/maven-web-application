def mavenhome = tool name: "maven 3.6.3"    
stage ("checkoutcode") {
    git branch: 'development', credentialsId: 'f3afd30f-f2c3-41e7-9ac9-a9b50174c00e', url: 'https://github.com/praveen4m3/maven-web-application.git'
}
stage ("build") {
    sh "${mavenhome}/bin/mvn clean package"
}
stage ("execute sonarqube report") {
    sh "${mavenhome}/bin/mvn sonar:sonar"
}
