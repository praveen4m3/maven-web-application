    sshagent(['dfb1cd34-3eed-4091-a339-7611fc1736d6']) {
    sh "scp -o stricthostkeychecking=no target/maven-web-application.war ec2-user@3.110.31.141:/opt/apache-tomcat-9.0.65"
}
}
